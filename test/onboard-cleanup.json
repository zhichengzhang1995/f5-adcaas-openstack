								"exec": [
									"pm.test('response is 200 or 404', function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
									"});",
									"",
									"let retry = Number(pm.environment.get('DELETE_RETRY'));",
									"if (retry === 0) {",
									"    pm.test('ADC delete timeout', function () {",
									"        pm.expect(false).to.be.true;",
									"    });",
									"}",
									"pm.environment.set('DELETE_RETRY', --retry);",
									"",
									"if (pm.response.code !== 404) {",
									"    postman.setNextRequest('wait-adc-deleted');",
									"    setTimeout(function(){}, 10000)",
									"}",
									""
								],
